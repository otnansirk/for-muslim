{
    "name": "For Muslim",
    "description": "Modern & Minimalist Chrome extension designed to help you balance work and faith.",
    "version": "3.0.2",
    "manifest_version": 3,
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "action": {
        "default_title": "__MSG_extensionName__"
    },
    "icons": {
        "192": "/assets/favicon/web-app-manifest-192x192.png",
        "512": "/assets/favicon/web-app-manifest-512x512.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; font-src 'self'; style-src 'self' 'unsafe-inline';"
    },
    "background": {
        "service_worker": "src/service_worker.ts"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ]
}